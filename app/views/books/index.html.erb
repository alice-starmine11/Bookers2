<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table table-user-info">
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <%= link_to "profile edit", edit_user_path(current_user),class:"btn btn-outline-secondary btn-block" %>
      </div>
      <h2 class="mt-5">New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="field">
            <%= f.label :title ,"Title" %><br>
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <%= f.label :body,"Opinion" %><br>
            <%= f.text_area :body %>
          </div>
          <%= f.submit 'Create Book',class:"btn btn-success btn-block mt-3"  %>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1 mt-5">
      <h2>Books</h2>
        <table class="table table-books table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to image_tag(@user.get_profile_image(80,80)),user_path(book.user_id) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
