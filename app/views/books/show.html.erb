<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table table-user-info">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <% if @user.id == current_user.id %>
        <%= link_to "profile edit", edit_user_path(current_user),class:"btn btn-outline-secondary btn-block" %>
        <% else %>
        <%= link_to "profile edit", user_path(current_user),class:"btn btn-outline-secondary btn-block" %>
        <% end %>
      </div>
      <h2 class="mt-5">New book</h2>
        <%= form_with model: @newbook do |f| %>
          <div class="field">
            <%= f.label :title ,"Title" %><br>
            <%= f.text_field :title,class:"form-control" %>
          </div>
          <div class="field">
            <%= f.label :body,"Opinion" %><br>
            <%= f.text_area :body,class:"form-control" %>
          </div>
          <%= f.submit 'Create Book',class:"btn btn-success btn-block mt-3"  %>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1 mt-5">
      <h2>Book detail</h2>
        <table class="table table-books table-hover table-inverse">
          <thead>

          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(80,80) %>
                  <br><%= @user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-success btn-block" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-danger btn-block" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>