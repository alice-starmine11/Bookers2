<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto mt-5">
      <h1 class="m-3">User info</h1>
      <% if @user.errors.any? %>
      <h3 class="text-danger"><%= @user.errors.count %> errors occured</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user,url: user_path(@user.id),method: :patch do |f| %>
          <div class="field">
            <%= f.label :name ,"Name" %><br>
            <%= f.text_field :name ,class:"form-control" %>
          </div>
          <div class="field">
            <%= f.label :profile_image,"Image" %><br>
            <%= f.file_field :profile_image,accept: "image/*" %>
          </div>
          <div class="field">
            <%= f.label :introduction,"Introduction" %><br>
            <%= f.text_area :introduction ,class:"form-control"%>
          </div>
          <%= f.submit 'Update User',class:"btn btn-secondary btn-block mt-3"  %>
      <% end %>
    </div>
  </div>
</div>
